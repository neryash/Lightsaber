<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/light_cont"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:animateLayoutChanges="true"
        android:elevation="1dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/lightThingy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="300px"
            android:layout_weight="1"
            android:paddingRight="20dp"
            android:visibility="gone"
            app:srcCompat="@drawable/sword_kill" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:elevation="20dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/saber"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_weight="2"
            android:elevation="20dp"
            android:paddingRight="60dp"
            app:srcCompat="@drawable/saber_off" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/openClrsCont"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:animateLayoutChanges="true"
        android:background="#FFFFFF"
        android:elevation="48dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/clrCont"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/blue"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/blue_saber" />

            <ImageView
                android:id="@+id/red"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/red_saber" />

            <ImageView
                android:id="@+id/white"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/white_saber" />

            <ImageView
                android:id="@+id/yellow"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/yellow_saber" />

            <ImageView
                android:id="@+id/purple"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/purple_saber" />

            <ImageView
                android:id="@+id/green"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/green_saber" />
        </LinearLayout>

        <ImageView
            android:id="@+id/openClrs"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/ic_baseline_arrow_drop_up_24" />

    </LinearLayout>

    <ImageView
        android:id="@+id/helpBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:elevation="50dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_baseline_help_outline_24" />

    <ImageView
        android:id="@+id/allStars"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/all_stars" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/helpcont"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#956A6A6A"
        android:elevation="100dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="#FFFFFF"
            android:elevation="40dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Help"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text='Click on "volume up" or the saber to toggle. \nPress on volume down while the saber is off to clash. \nPress on the dropdown menu to change lightsaber color.\n Move saber around for awesome sounds.' />
        </LinearLayout>

        <ImageView
            android:id="@+id/closeHelp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_close_24_white" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>